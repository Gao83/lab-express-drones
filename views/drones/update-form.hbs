<h2>Update the drone</h2>


<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">


            <hr>

            <form action="/drones/{{id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="speed" class="form-label">Max Speed</label>
                    <input type="text" class="form-control" id="speed" name="maxSpeed" value="{{maxSpeed}}">
                </div>


                <button type="submit" class="btn btn-dark">Edit New Drone</button>
                <a href="/" class="btn btn-dark">Volver al incio</a>
            </form>


            <hr>


        </div>
    </div>


</div>
